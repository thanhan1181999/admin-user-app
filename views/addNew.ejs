                                    <div class="form-row">
                                        <div class="name">Tên chính</div>
                                        <div class="value">
                                            <div class="input-group">
                                                <input class="input--style-5" type="text" name="name" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="name">Tên phụ</div>
                                        <div class="value">
